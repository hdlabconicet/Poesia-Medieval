    <text>
        <body>
            
            <pb facs="#PN85-0"/>
            
            <head type="rúbrica"> Esta <term cRef="163">respuesta</term> fizo e ordenó el dicho
                    <persName ref="#AAV">Alfonso Álvarez de <placeName ref="#VI1">Villasandino</placeName>
            </persName> contra el dicho <persName ref="#BSA">Bachiller e Maestro</persName>
            </head>

            <pb facs="#PN85-1"/>
            
            <sp who="#AAV">
                <speaker>Bachiller en Artes de Salamanca</speaker>
                <lg type="poema"
                subtype="respuesta"
                unisonancia="singular"
                isometrismo="isométrico"
                isoestrofismo="heteroestrófico"
                asonancia="consonante"
                met="8x10"
                rhyme="ABBAACCA">
                    <note> Se trata de una pieza de arte mayor</note>
                    <lg n="1"
                   type="octava"
                   met="8x10"
                   rhyme="ABBAACCA">

                        <l xml:id="L1">Quando bien <rs ref="#BSA">contenplo la mi flaqu<rhyme label="eza">eza</rhyme>
                     </rs>
                  </l>
                        <l xml:id="L2">por ser terrenales en la nuestra creaci<rhyme label="on">ón</rhyme>
                  </l>
                        <l xml:id="L3">
                            <rs ref="#BSA">yo fallo</rs> por cierto aver mayor d<rhyme label="on">on</rhyme>
                  </l>
                        <l xml:id="L4">el ángel criado de Santa Escript<rhyme label="ura">ura</rhyme>
                  </l>
                        <l xml:id="L5">pero Iesu Cristo de mayor lind<rhyme label="eza">eza</rhyme>
                  </l>
                        <l xml:id="L6">sobre todo ángel es glorific<rhyme label="ado">ado</rhyme>
                  </l>
                        <l xml:id="L7">a diestra del Padre en trono estrell<rhyme label="ado">ado</rhyme>
                  </l>
                        <l xml:id="L8">mostrando desdén la su real<rhyme label="eza">eza</rhyme>.</l>
                    </lg>
                    
                    <pb facs="#PN85-2"/>
                    
                    <lg n="2"
                   type="octava"
                   met="8x10"
                   rhyme="ABBAACCA">
                        <l xml:id="L9">Este Iesu Cristo, Señor del alt<rhyme label="ura">ura</rhyme>,</l>
                        <l xml:id="L10">de todos nos otros es Padre llam<rhyme label="ado">ado</rhyme>
                  </l>
                        <l xml:id="L11">verdaderamente nos es demostr<rhyme label="ado">ado</rhyme>,</l>
                        <l xml:id="L12">segunt testimonio de Santa Escript<rhyme label="ura">ura</rhyme>,</l>
                        <l xml:id="L13">la Virgen María, santa criat<rhyme label="ura">ura</rhyme>,</l>
                        <l xml:id="L14">solo sin conpaña si otra com<rhyme label="adre">adre</rhyme>,</l>
                        <l xml:id="L15">teniendo a Josep solo por cof<rhyme label="adre">adre</rhyme>
                  </l>
                        <l xml:id="L16">parió fijo epadre sín otra trist<rhyme label="ura">ura</rhyme>.</l>
                    </lg>


                    <lg n="3"
                   type="octava"
                   met="8x10"
                   rhyme="ABBAACCA">
                        <l xml:id="L17">A todo varón paresce cuid<rhyme label="osa">osa</rhyme>
                  </l>
                        <l xml:id="L18">oír la figura de tal condici<rhyme label="on">ón</rhyme>,</l>
                        <l xml:id="L19">pero si pensare en su entenci<rhyme label="on">ón</rhyme>
                  </l>
                        <l xml:id="L20">bien puede fallarla e ser virtu<rhyme label="osa">osa</rhyme>
                  </l>
                        <l xml:id="L21">el trigo senbrado en tierra sabr<rhyme label="osa">osa</rhyme>
                  </l>
                        <l xml:id="L22">porque mejor pueda el frutific<rhyme label="ar">ar</rhyme>
                  </l>
                        <l xml:id="L23">conviene que muera después del senbr<rhyme label="ar">ar</rhyme>
                  </l>
                        <l xml:id="L24">para nascer dello la flor abond<rhyme label="osa">osa</rhyme>.</l>
                    </lg>

                    <lg n="4"
                   type="octava"
                   met="8x10"
                   rhyme="ABBAACCA">
                        <l xml:id="L25">Estoria tenemos e canoniz<rhyme label="ada">ada</rhyme>
                  </l>
                        <l xml:id="L26">de Santo Tomás a quien Dios bien qu<rhyme label="iso">iso</rhyme>
                  </l>
                        <l xml:id="L27">el alma del qual es en Para<rhyme label="iso">íso</rhyme>
                  </l>
                        <l xml:id="L28">donde por sienpre será conserv<rhyme label="ada">ada</rhyme>
                  </l>
                        <l xml:id="L29">en santa iglesia, madre consagr<rhyme label="ada">ada</rhyme>,</l>
                        <l xml:id="L30">su fijo el rey a Dios non temi<rhyme label="ente">ente</rhyme>,</l>
                        <l xml:id="L31">mató este santo altar servi<rhyme label="ente">ente</rhyme>
                  </l>
                        <l xml:id="L32">de muerte cruel muy arrebat<rhyme label="ada">ada</rhyme>.</l>
                    </lg>

                    <lg n="5" type="finida" met="4x10" rhyme="ABBA">
                        <l xml:id="L33">Por ende su alma está conden<rhyme label="ada">ada</rhyme>
                  </l>
                        <l xml:id="L34">con todos malos aconsejad<rhyme label="ores">ores</rhyme>
                  </l>
                        <l xml:id="L35">viven en tormentos sufriendo dol<rhyme label="ores">ores</rhyme>
                  </l>
                        <l xml:id="L36">en fuego infernal terrible mor<rhyme label="ada">ada</rhyme>.</l>
                    </lg>
                </lg>
            </sp>
