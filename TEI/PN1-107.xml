    <text>
        <body>
            
          <pb facs="#PN107-0"/>
              
            <head type="rúbrica">Esta <term cRef="162">pregunta</term>
                <term cRef="174">fizo</term> e <term cRef="175">ordenó</term>
                <persName ref="#AAV">Alfonso Álvarez</persName> de <placeName ref="#VI1">Villasandino</placeName> contra Garcia <persName ref="#GFG">Ferrandes de
                        <placeName ref="#GE1">Gerena</placeName>
            </persName> quando se tornó moro</head>
            
            <pb facs="#PN107-1"/>
            
            <sp who="#GFG">
                <speaker>Alfonso Álvarez de Villasandino</speaker>
                <lg type="poema"
                subtype="pregunta"
                unisonancia="singular"
                isometrismo="isométrico"
                isoestrofismo="isoestrófico"
                asonancia="consonante"
                met="8x10"
                rhyme="ABBAACCA">
                    <note> Se trata de una pieza de arte mayor. Incompleta. Falta la finida y el
                        folio siguiente completo.</note>
                    <lg n="1"
                   type="octava"
                   met="8x10"
                   rhyme="ABBAACCA">
                        <l xml:id="L1">
                     <rs ref="#GFG">Garcia amigo</rs>, ninguno <rs ref="#GFG">te
                                    esp<rhyme label="ante">ante</rhyme>
                     </rs>
                  </l>
                        <l xml:id="L2">pero que <rs ref="#GFG">te</rs>
                            <rs ref="#AAV">diga</rs> que muito <rs ref="#GFG">perd<rhyme label="iste">iste</rhyme>
                     </rs>
                  </l>
                        <l xml:id="L3">desque en Mahomad <rs ref="#GFG">tu creencia pos<rhyme label="iste">iste</rhyme>
                     </rs>,</l>
                        <l xml:id="L4">segunt que dize o vello almir<rhyme label="ante">ante</rhyme>
                  </l>
                        <l xml:id="L5">que o que <rs ref="#GFG">ganaste</rs>
                            <rs ref="#AAV">direi</rs> de tal<rhyme label="ante">ante</rhyme>;</l>
                        <l xml:id="L6">
                     <rs ref="#GFG">ganaste</rs> nome de alcaide de v<rhyme label="ento">ento</rhyme>,</l>
                        <l xml:id="L7">
                     <rs ref="#GFG">ganaste</rs> inferno e ´scuro torm<rhyme label="ento">ento</rhyme>
                  </l>
                        <l xml:id="L8">
                     <rs ref="#GFG">ganaste</rs> más que <rs ref="#GFG">tragías</rs>
                            <rhyme label="ante">ante</rhyme>.</l>
                    </lg>

                    <lg n="2"
                   type="octava"
                   met="8x10"
                   rhyme="ABBAACCA">
                        <l xml:id="L9">Desque a Iesu, nosso salvad<rhyme label="or">or</rhyme>,</l>
                        <l xml:id="L10">
                     <rs ref="#GFG">tu renegaste</rs> por ben ador<rhyme label="ar">ar</rhyme>,</l>
                        <l xml:id="L11">o falso profeta linage de ag<rhyme label="ar">ar</rhyme>,</l>
                        <l xml:id="L12">que dizen Mafomad, vil enbaid<rhyme label="or">or</rhyme>,</l>
                        <l xml:id="L13">de quanto <rs ref="#GFG">ganaste</rs> so ben sabid<rhyme label="or">or</rhyme>;</l>
                        <l xml:id="L14">
                     <rs ref="#GFG">ganaste mas barbas que trager sol<rhyme label="ias">ías</rhyme>
                     </rs>,</l>
                        <l xml:id="L15">
                     <rs ref="#GFG">ganaste maridos que acá non av<rhyme label="ias">ías</rhyme>
                     </rs>
                  </l>
                        <l xml:id="L16">
                     <rs ref="#GFG">ga[n]aste</rs> privança do demo may<rhyme label="or">or</rhyme>.</l>
                    </lg>

                    <lg n="3"
                   type="octava"
                   met="8x10"
                   rhyme="ABBAACCA">
                        <l xml:id="L17">Con tales trocos como <rs ref="#GFG">has troc<rhyme label="ado">ado</rhyme>
                     </rs>
                  </l>
                        <l xml:id="L18">muy ben <rs ref="#GFG">podes chamar te traid<rhyme label="or">or</rhyme>
                     </rs>
                  </l>
                        <l xml:id="L19">pois <rs ref="#GFG">non oviste</rs> de Cristus pav<rhyme label="or">or</rhyme>
                  </l>
                        <l xml:id="L20">nin de as gentes vergonça <rs ref="#GFG">coit<rhyme label="ado">ado</rhyme>
                     </rs>
                  </l>
                        <l xml:id="L21">
                     <rhyme label="ado">(...)</rhyme>
                  </l>
                        <l xml:id="L22">canto hi <rs ref="#GFG">ganaste</rs> proveza e ma
                                avent<rhyme label="ura">ura</rhyme>
                  </l>
                        <l xml:id="L23">
                            <rs ref="#GFG">ganaste</rs> luxuria amarga trist<rhyme label="ura">ura</rhyme>
                  </l>
                        <l xml:id="L24">
                            <rs ref="#GFG">ganaste por sienpre de ser lastim<rhyme label="ado">ado</rhyme>
                     </rs>.</l>
                    </lg>

                    <pb facs="#PN107-2"/>

                    <lg n="4"
                   type="octava"
                   met="8x10"
                   rhyme="ABBAACCA">
                        <l xml:id="L25">Ja <rs ref="#GFG">non te podes chamar perdid<rhyme label="oso">oso</rhyme></rs></l>
                        <l xml:id="L26">pois tantas cossas com’ estas <rs ref="#GFG">ga[n]<rhyme label="aste">aste</rhyme></rs></l>
                        <l xml:id="L27">cando a ley muy santa troc<rhyme label="aste">aste</rhyme></l>
                        <l xml:id="L28">por maa seíta do falso engañ<rhyme label="oso">osso</rhyme>;</l>
                        <l xml:id="L29">de canto <rs ref="#GFG">ganaste</rs><rs ref="#AAV">sei ledo e goz<rhyme label="oso">oso</rhyme></rs>,</l>
                        <l xml:id="L30"> <rs ref="#GFG">ganaste</rs> lazeria de noite e de d<rhyme label="ia">ía</rhyme>,</l>
                        <l xml:id="L31"><rs ref="#GFG">ganaste</rs> la ira de ssanta Mar<rhyme label="ia">ía</rhyme>,</l>
                        <l xml:id="L32"><rs ref="#GFG">ganaste</rs> vileza e canbio astr<rhyme label="oso">oso</rhyme>.</l>
                    </lg>

                </lg>
            </sp>
        </body>
